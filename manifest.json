{
  "manifest_version": 3,
  "name": "WP Blog Counter",
  "version": "1.0",
  "description": "WordPress投稿画面で文字数をカウントします",
  "browser_specific_settings": {
    "gecko": {
      "id": "wp-blog-counter@example.com",
      "strict_min_version": "142.0",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/wp-admin/post.php*",
        "*://*/wp-admin/post-new.php*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}